<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityTaskMore" android:orientation="vertical" android:gravity="fill_vertical"
        android:background="#eee">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/TextMoreName" android:layout_weight="0.05"
            android:padding="15dp" android:textStyle="bold" android:textColor="#777" android:textSize="24sp"
            android:layout_margin="10dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1" android:background="#fff">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/TextMoreCreated" android:layout_weight="2.5"
                    android:layout_margin="10dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                    android:layout_margin="10dp"/>
        </LinearLayout>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/TextMoreDescription" android:layout_weight="1"
                android:layout_margin="10dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_recent_history"
                    android:id="@+id/imageView" android:layout_weight="0.1"
                    android:layout_margin="10dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/TextMoreDeadline" android:layout_weight="1"
                    android:layout_margin="10dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="0">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_sort_by_size"
                    android:id="@+id/imageView2" android:layout_weight="0.015"
            android:layout_margin="10dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/TextMoreCategory" android:layout_weight="1"
                    android:layout_margin="10dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/TextMorePriority" android:layout_weight="2"
                    android:textAlignment="center" android:padding="5dp"
                    android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="Редактировать"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ButtonNext" android:layout_weight="0.015"
            android:layout_margin="10dp" android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"/>
</LinearLayout>