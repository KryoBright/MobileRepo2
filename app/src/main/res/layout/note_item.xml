<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:gravity="center">

    <View
            android:layout_width="25dp"
            android:layout_height="match_parent" android:id="@+id/colorBar" android:layout_weight="0.25"
            android:background="@color/colorAccent"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/taskNameText" android:padding="5dp"
                android:textStyle="bold" android:textColor="@android:color/black"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/taskDeskText" android:padding="5dp"
                android:textColor="#777"/>
    </LinearLayout>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/doneChkr" android:layout_weight="0.1"
            android:padding="10dp" android:checked="false"/>
</LinearLayout>